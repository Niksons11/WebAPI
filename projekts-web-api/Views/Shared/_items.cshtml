@model IEnumerable<WebApi.Models.FileData>

@foreach (var item in Model)
{
    @if (item.Publisher == User.Identity.Name)
    {
        <tr>
            <td>@item.PublisherFileName</td>
            <td>@item.ModifiedOn</td>
            @if (item.FileType.Contains("image"))
            {
                <td> <a href="@item.Url"><img src="@item.Url" width="100" height="100" /></a></td>
            }
            else
            {
                <td> <a href="@item.Url"></a></td>
            }
            <td>@item.Description</td>
            <td> <a href="/azure/Download?blobName=@item.FileName">Download</a> </td>
            <td> <a href="/azure/Delete?blobName=@item.FileName">Delete</a> </td>

        </tr>
    }
}
}