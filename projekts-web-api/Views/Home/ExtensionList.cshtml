@using WebApi.Entities
@model IQueryable<WebApi.Entities.FileProperties>
@{
    ViewData["Title"] = "Extension List";
}


<div class="text-left">
    <a asp-controller="Home" asp-action="AddExtensions">Create a new extension</a>
</div>


<h3>Extensions:</h3>
<div class="text-left">
    @foreach (FileProperties entity in Model)
    {
        <div>

            <form method="post" asp-controller="Home" asp-action="ExtensionDelete">
                @entity.FileNameExtension
                <input type="hidden" value="@entity.Id" name="Id" />
                <input type="submit" onclick="return confirm('are you sure you want to delete: @entity.FileNameExtension ?')" value="Delete" />
                <hr />
            </form>

        </div>

    }
</div>